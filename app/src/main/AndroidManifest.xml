<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.projectara">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/name_app"
            android:roundIcon="@mipmap/smlogo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".chatServices.SignInFirebase"
                android:label="@string/title_activity_dashboard"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".SplashScreen"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    <activity android:name=".activity.SelectFriendActivity"></activity>
        <activity android:name=".chatServices.Register"></activity>
        <activity android:name=".activity.ChatDetailActivity"
        android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activity.MainActivity"></activity>
    </application>

</manifest>